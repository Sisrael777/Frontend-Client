﻿
@page "/Articulo/{id:int}"
@using Models
@using Services
@inject IArticuloServices ArticuloService

<MudText Typo="Typo.h5">Detalles del Articulo</MudText>

@if (articulo == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <MudCard>
        <MudCardHeader Class="blue lighten-2">
            <CardHeaderContent>
                <MudText Typo="Typo.h6">@articulo.Nombre</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.body2">@articulo.Descripcion</MudText>
        </MudCardContent>
        <MudCardActions Class="center">
            <img src="@articulo.Imagen" alt="@articulo.Nombre" Elevation="25" Class="rounded-lg" width="60%" height="auto" />
        </MudCardActions>
    </MudCard>
}

@code {
    [Parameter]
    public int id { get; set; }

    Articulo articulo = new Articulo();

    protected override async Task OnInitializedAsync()
    {
        if (id > 0)
            articulo = await ArticuloService.GetById(id);
    }
}