@page "/Consola"
@using  Models
@using Services

@inject IConsolaServices ConsolaService

<PageTitle>Consolas</PageTitle>
<MudContainer Height="100%" Width="100%">
   
    <div style="display: flex; align-items: center; padding:10px">
        <MudLink Href="/">Home</MudLink>
        <MudText style="margin-left: 10px;">/  Consolas</MudText>
    </div>

    @if (consolas == null)
    {
        <MudSkeleton />
        <MudSkeleton SkeletonType="SkeletonType.Circle" Width="50px" Height="50px" />
        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="200px" Height="110px" />
    }
    else
    {
        <MudGrid>
            @foreach (var item in consolas)
            {
                <MudItem xs="12" sm="10" md="6" lg="4">
                    <MudCard>
                        <MudCardHeader Class="blue darken-4">
                            
                            <CardHeaderContent>
                                <MudText  Style="color:white" Typo="Typo.h6">@item.Nombre</MudText>
                                <MudText Style="color:white" Typo="Typo.body2">@item.Serie</MudText>
                            </CardHeaderContent>
                           
                        </MudCardHeader>
                        <MudCardMedia Image="@item.Imagen" Height="250" />
                        <MudCardContent>
                            <MudText Typo="Typo.body2">@item.Fabricante™ @item.AñodeLanzamiento</MudText>
                            <MudText  Typo="Typo.body2">@item.Descripcion</MudText>
                        </MudCardContent>
                        <MudCardActions>
                            <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Default" />
                            <MudIconButton Icon="@Icons.Material.Filled.Share" Color="Color.Default" />
                            <MudButton Link="@($"/detalles/{item.Id}")" Variant="Variant.Outlined" Color="Color.Success">Detalles</MudButton>
                        </MudCardActions>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>
    }
</MudContainer>




@code {
    IEnumerable<Consola> consolas = new List<Consola>();

    protected override async Task OnInitializedAsync()
    {
        consolas = await ConsolaService.GetAll();
    }
}
